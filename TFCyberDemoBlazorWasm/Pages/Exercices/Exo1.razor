@page "/exo1"
<h3>Exo1</h3>

@if(!GameOver)
{
    @if (string.IsNullOrEmpty(Prenom))
    {
        <p>
            Veuillez entrer votre prénom :
            <input type="text" @bind-value="Prenom" class="form-control" />
        </p>
    }
    else
    {
        <Quizz Prenom="@Prenom" Repondre="EnregistrerReponse"/>
    }
}
else
{
    <h4>Voici vos réponses</h4>
    <ul>
        @foreach(string rep in Reponses)
        {
            <li>@rep</li>
        }
    </ul>
}
